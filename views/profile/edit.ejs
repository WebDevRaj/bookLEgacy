<% include ../partials/header %>

<h1>Edit Profile</h1>

<form action="/profile?_method=PUT" method="POST">
    <input type="text" name="user[name]" value="<%= currentUser.name %>">
    <input type="text" name="user[email]" value="<%= currentUser.email %>">
    <input type="number" name="user[phone]" value="<%= currentUser.phone %>">
    <input type="text" name="user[username]" value="<%= currentUser.username %>">
    <button>Update Profile</button>
</form>

