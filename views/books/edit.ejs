<% include ../partials/header %>
<div class="container">
    <div class="row">
         <h1 style="text-align: center;">Edit <%= book.name %></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/books/<%= book._id %>?_method=PUT" method="post">
                <div class="form-group">
                     <input class="form-control" type="text" name="book[title]" value="<%= book.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[author]" value="<%= book.author %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[subject]" value="<%= book.subject %>">
                </div>
                <div class="form-group">
                        <select name="book[department]" class="form-control"> 
                            <option disabled selected>Department</option>
                            <option value="Applied Science">Applied Science</option>
                            <option value="CSE">CSE</option>
                            <option value="ME">ME</option>
                            <option value="Civil">Civil</option>
                            <option value="ECE">ECE</option>
                        </select>
                </div>
                <div class="form-group">
                        <select class="form-control" name="book[sem]" ="<%= book.sem %>" class="form-control">
                            <option disabled selected>Semester</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                        </select> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[price]" value="<%= book.price %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/books">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>