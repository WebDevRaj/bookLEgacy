<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">bookLEgacy</p>
            <div class="list-group">
                <li class="list-group-item active">Info </li>
                
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                
                    <h4 class="pull-right">Rs. <%= book.price %></h4>
                    <h1> <%= book.title %></h1>
                    <h3><strong>Author:</strong> <%= book.author %></h3>
                    <h3><strong>Subject:</strong> <%= book.subject %></h3>
                    <h3><strong>Department:</strong> <%= book.department %></h3>
                    <h3><strong>Semester:</strong> <%= book.sem %></h3>
                    <h4>
                        <em>Submitted By <%= book.owner.username %></em>
                    </h4>
                    <h4 class="pull-right">Contact:  <%= book.owner.phone %></h4>
                    <% if(currentUser && book.owner.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/books/<%= book._id %>/edit">Edit</a>
                        <form id="delete-form" action="/books/<%= book._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>